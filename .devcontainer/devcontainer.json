{
  "name": "Dev Container for f(x) monorepo",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "mounts": ["source=${localEnv:HOME}/.docker/,target=/etc/docker/,type=bind,readonly=true,consistency=cached"],
  "extensions": [
    "bazelbuild.vscode-bazel",
    "haskell.haskell"
  ],
  "settings": {
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "**/Thumbs.db": true,
      "**/bazel-*": true
    }
  }
}